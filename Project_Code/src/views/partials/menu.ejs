<!-- header style makes it transparent, hence it you can see elements scrool under -->
<header style="mix-blend-mode: difference; opacity: 1">
  <nav class="navbar">
    <!-- Left elements with the search-->
    <ul class="navbar-nav me-auto">
      <li class="nav-item">
        <!-- Archive is All games, different from discover-->
        <a class="link" name="Archive" href="/archive">Archive</a>
        <!-- User dashboard, login auth restrictions-->
        <a class="link" name="Dashboard" href="/dashboard">Dashboard</a>
        <form action="/search" method="GET" role="search">
          <input
            class="search-bar link"
            type="search"
            placeholder="Search"
            name="search"
            id="search"
            aria-label="Search"
          />
        </form>
      </li>
    </ul>
    <!-- website logo - Could be just text or an actual logo-->
    <div class="logo">
      <a
        class="logo"
        name="Home"
        href="/discover"
        draggable="false"
        style="transform: translate3d(0px, 0%, 0px)"
        ><img src="/img/GG-White.png" height="100px" alt="LOGO BABY"
      /></a>
    </div>
    <!-- Right elements with the login, signup and logout-->
    <ul class="navbar-nav ms-auto">
      <li class="nav-item">
        <% if (!isLoggedIn) { %>
          <a class="link2" href="/discover">Browse</a>
          <a class="link2" href="/login">Login</a>
          <a class="link2" href="/register">Sign Up</a>
        <% } else { %>
          <a class="link2" href="/logout">Logout</a>
        <% } %>
      </li>
    </ul>
  </nav>
</header>